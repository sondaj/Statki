<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:fitsSystemWindows="true"
    android:id="@+id/main_layout"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="true">

        <Button
            android:text="@string/MainMenu1"
            android:id="@+id/menu_btn_1"
            android:background="@drawable/tlo_przycisku1"
            style="@style/MenuButton" />
        <Button
            android:text="@string/MainMenu2"
            android:id="@+id/menu_btn_2"
            android:background="@drawable/tlo_przycisku1"
            style="@style/MenuButton" />
        <Button
            android:text="@string/MainMenu3"
            android:id="@+id/menu_btn_3"
            android:background="@drawable/tlo_przycisku1"
            style="@style/MenuButton" />
        <Button
            android:text="@string/MainMenu4"
            android:id="@+id/menu_btn_4"
            android:background="@drawable/tlo_przycisku1"
            style="@style/MenuButton" />
    </LinearLayout>
</RelativeLayout>
